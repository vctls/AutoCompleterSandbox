{% extends app.request.get('jqui') ? 'base_jqui.html.twig' : 'base.html.twig' %}

{% block title %}Edit Book - {{ parent() }}{% endblock %}

{% block body %}
    <h1>Edit Book <small>{{ book.id }}</small></h1>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">OK</button>
    {{ form_end(form) }}
    <a href="{{ path('search_author') }}" id="url-list" class="hidden"></a>
    <a href="{{ path('get_author') }}" id ="url-get" class="hidden"></a>
    <a href="{{ path('new_author') }}" id ="url-new" class="hidden"></a>
{% endblock %}
